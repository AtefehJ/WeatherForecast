    <link href="css/styles.css" rel="stylesheet" />
  </head>

  <body class="d-flex h-100 text-center text-bg-dark">
    <div class="cover-container d-flex w-100 h-100 p-3 mx-auto flex-column">
      <main class="px-3">
        <h1><%= todayDate %></h1>
        <img
          class="weather-pic"
          src="image/WeatherReport.jpeg"
          width="450"
          height="170"
        />
        <form action="/" method="post">
          <label for="cityInput">City Name:</label>
          <input
            id="cityInput"
            type="text"
            name="cityName"
            autocomplete="off"
          />
          <button type="submit">Go</button>
        </form>

        <!-- <% if(myCity !== null) { %>
        <div class="result">
          <h2><%= myCity %></h2>

          <h3><%= myTemp %> &deg; F</h3>

          <div class="temp">
            <img src="<%= myImage %>" alt="picture" />
            <h4><%= myDescription %></h4>
          </div>
        </div>
        <% } %> -->

        <% if(myCity !== null) { %>
        <div class="result">
          <h2><%= myCity %></h2>
          <% } %> <% if(myTemp !== null) { %>
          <h3><%= myTemp %> &deg; F</h3>
          <% } %>
          <div class="temp">
            <% if(myImage !== null) { %>
            <img src="<%= myImage %>" alt="picture" />
            <% } %>
            <h4><%= myDescription %></h4>
          </div>
        </div>
      </main>
      <footer class="mt-auto text-white-50">
        <p>by &copy;Atefeh.J</p>
      </footer>
    </div>
  </body>
